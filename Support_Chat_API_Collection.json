                "exec": [
                    "// Auto-set auth token from login response",
                    "if (pm.response && pm.response.code === 200) {",
                    "    const response = pm.response.json();",
                    "    if (response.token) {",
                    "        pm.collectionVariables.set('auth_token', response.token);",
                    "    }",
                    "    if (response.chat && response.chat.id) {",
                    "        pm.collectionVariables.set('chat_id', response.chat.id);",
                    "    }",
                    "    if (response.id) {",
                    "        pm.collectionVariables.set('message_id', response.id);",
                    "    }",
                    "    if (response.organization && response.organization.id) {",
                    "        pm.collectionVariables.set('organization_id', response.organization.id);",
                    "    }",
                    "    if (response.api_key) {",
                    "        pm.collectionVariables.set('api_key', response.api_key);",
                    "    }",
                    "}"
                ]
            }
